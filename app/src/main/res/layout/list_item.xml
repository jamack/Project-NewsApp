<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_padding_half"
    android:paddingBottom="@dimen/margin_padding_half"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        tools:text="Will AT\u0026T’s call to drop Huawei end phone maker’s US hopes?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_thin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_date_published"
            tools:text="2018-01-13 | "
            style="@style/text_additional_info" />

        <TextView
            android:id="@+id/list_item_section"
            tools:text="Technology | "
            style="@style/text_additional_info" />

        <TextView
            android:id="@+id/list_item_author"
            tools:text="Author unknown"
            style="@style/text_additional_info" />

    </LinearLayout>

</LinearLayout>